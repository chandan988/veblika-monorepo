{
  "name": "support-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "dev:ba": "turbo run dev --filter=backend-assist-api... --filter=backend-assist-web... --filter=widget-ui...",
    "dev:sm": "turbo run dev --filter=backend-assist-api... --filter=social-media-api... --filter=social-media-web...",
    "dev:hrms": "turbo run dev --filter=hrms... --filter=backend-assist-api...",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:ps": "docker-compose ps"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}